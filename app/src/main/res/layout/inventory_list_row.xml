<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/inventory_equipment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/inventory_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:text="TextView"
        android:layout_alignTop="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_icon" />

    <TextView
        android:id="@+id/inventory_equipment_attack_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inventory_equipment_icon"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:text="@string/attack_label" />

    <TextView
        android:id="@+id/inventory_equipment_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inventory_equipment_attack_label"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:layout_marginStart="5dp"
        android:text="0" />

    <TextView
        android:id="@+id/inventory_equipment_defense_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inventory_equipment_attack"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:text="@string/defense_label" />

    <TextView
        android:id="@+id/inventory_equipment_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_defense_label"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/inventory_equipment_magic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inventory_equipment_defense"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:text="@string/magic_label" />

    <TextView
        android:id="@+id/inventory_equipment_magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_magic_label"
        android:layout_marginStart="5dp" />

    <RadioButton
        android:id="@+id/radiobutton_equipped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>