<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/inventory_equipment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/inventory_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="TextView"
        android:layout_alignTop="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_icon" />

    <TextView
        android:id="@+id/inventory_equipment_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/inventory_equipment_icon"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/inventory_equipment_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_attack"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/inventory_equipment_magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/inventory_equipment_icon"
        android:layout_toEndOf="@+id/inventory_equipment_defense"
        android:layout_marginStart="20dp" />
</RelativeLayout>