<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/quest_history_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/quest_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quest_history_icon"
        android:layout_toEndOf="@+id/quest_history_icon"
        android:text="TextView"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/quest_history_min_attack_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/quest_history_icon"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:text="@string/attack_label" />

    <TextView
        android:id="@+id/quest_history_min_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/quest_history_min_attack_label"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:layout_marginStart="5dp"
        android:text="0" />

    <TextView
        android:id="@+id/quest_history_min_defense_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/quest_history_min_attack"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:text="@string/defense_label" />

    <TextView
        android:id="@+id/quest_history_min_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:layout_toEndOf="@+id/quest_history_min_defense_label"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/quest_history_min_magic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/quest_history_min_defense"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:text="@string/magic_label" />

    <TextView
        android:id="@+id/quest_history_min_magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quest_history_icon"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/quest_history_min_magic_label"
        android:text="0"/>

    <TextView
        android:id="@+id/quest_history_exp_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/quest_history_min_magic" />

</RelativeLayout>