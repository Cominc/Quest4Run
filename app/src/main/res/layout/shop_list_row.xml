<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/shop_equipment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shop_equipment_icon"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:id="@+id/shop_equipment_layout_name_level">
        <TextView
            android:id="@+id/shop_equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/shop_equipment_min_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/shop_equipment_name"
            android:layout_marginStart="5dp"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shop_equipment_attack_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_layout_name_level"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="@string/attack_label"
        android:width="50dp" />

    <TextView
        android:id="@+id/shop_equipment_defense_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_attack_label"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="@string/defense_label"
        android:width="50dp" />

    <TextView
        android:id="@+id/shop_equipment_magic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_defense_label"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="@string/magic_label"
        android:width="50dp" />



    <ImageView
        android:id="@+id/shop_equipment_icon_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_database_grey600_36dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_buy"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/shop_equipment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/shop_equipment_icon_coin"
        />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/buy_button_label" />

    <TextView
        android:id="@+id/shop_equipment_attack_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/shop_equipment_attack_label"
        android:layout_alignBottom="@+id/shop_equipment_attack_label"
        android:layout_toEndOf="@+id/shop_equipment_attack_label"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/shop_equipment_defense_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/shop_equipment_attack_value"
        android:layout_toEndOf="@+id/shop_equipment_defense_label"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/shop_equipment_magic_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/shop_equipment_defense_value"
        android:layout_toEndOf="@+id/shop_equipment_magic_label"
        android:layout_marginLeft="5dp"/>




</RelativeLayout>