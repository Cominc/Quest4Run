<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/shop_equipment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/shop_equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="TextView"
        android:layout_alignTop="@+id/shop_equipment_icon"
        android:layout_toEndOf="@+id/shop_equipment_icon" />

    <TextView
        android:id="@+id/shop_equipment_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_name"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_equipment_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_attack"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_equipment_magic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_equipment_defense"
        android:layout_toEndOf="@+id/shop_equipment_icon"
        android:text="TextView" />



    <ImageView
        android:id="@+id/icon_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coins"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/shop_equipment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon_coin"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Button" />
</RelativeLayout>