<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/task_icon_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/task_name_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="TextView"
        android:layout_alignTop="@+id/task_icon_completed"
        android:layout_toEndOf="@+id/task_icon_completed" />

    <TextView
        android:id="@+id/task_type_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name_completed"
        android:layout_toEndOf="@+id/task_icon_completed"
        android:text="TextView" />

    <TextView
        android:id="@+id/task_goal_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_type_completed"
        android:layout_toEndOf="@+id/task_icon_completed"
        android:text="TextView" />

    <ImageView
        android:id="@+id/icon_coin_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coins"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/task_reward_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon_coin_completed"
        android:text="TextView" />

</RelativeLayout>