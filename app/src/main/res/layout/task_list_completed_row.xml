<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/task_icon_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/task_name_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:text="TextView"
        android:layout_alignTop="@+id/task_icon_completed"
        android:layout_toEndOf="@+id/task_icon_completed" />

    <TextView
        android:id="@+id/task_type_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name_completed"
        android:layout_toEndOf="@+id/task_icon_completed"
        android:text="TextView" />

    <TextView
        android:id="@+id/task_goal_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_type_completed"
        android:layout_toEndOf="@+id/task_icon_completed"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/task_name_completed">
        <ImageView
            android:id="@+id/icon_coin_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_database_grey600_36dp" />

        <TextView
            android:id="@+id/task_reward_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon_coin_completed" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_date_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="TextView"/>

</RelativeLayout>